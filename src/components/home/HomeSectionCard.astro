---
const { title, items } = Astro.props;
---

<section class="card">
  <h2>{title}</h2>

  <ul>
    {items.map((item) => (
      <li>{item}</li>
    ))}
  </ul>
</section>

<style>
  .card {
    background: var(--gold);
    border-radius: var(--radius-lg);
    padding: 2.25rem 1.75rem;
    text-align: center;
    min-height: 460px;
    display: flex;
    flex-direction: column;
  }

  h2 {
    font-size: 2.6rem;
    margin: 0 0 2rem;
    line-height: 1;
    white-space: nowrap;
  }
  ul {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 1.25rem;
  flex: 1;
  justify-content: space-evenly;
  padding-top: 0.5rem;
  font-family: "Playfair Display", serif;
}

  li {
    background: var(--gold-soft);
    border-radius: var(--radius-sm);
    padding: 1rem 1.1rem;
    margin: 0.9rem 0;
    font-weight: 600;
    margin: 0;
  }
</style>
