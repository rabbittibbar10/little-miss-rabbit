---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="site-header">
  <div class="title-wrap">
    <a class="title" href="/">{SITE_TITLE}</a>
  </div>

  <nav class="nav">
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
    <HeaderLink href="/templates">Templates</HeaderLink>
    <HeaderLink href="/recipes">Recipes</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/ask">Ask Me!</HeaderLink>
  </nav>
</header>

<style>
  .site-header {
    background: var(--cream);
    margin: 0;
    padding: 2.25rem 0 0;
  }

  .title-wrap {
    display: flex;
    justify-content: center;
    padding: 0 1rem 1.75rem;
  }

  .title {
    font-family: "Playfair Display", serif;
    font-size: clamp(2.2rem, 4vw, 4rem);
    font-weight: 700;
    letter-spacing: 0.5px;
    color: #c9921f; /* warm gold/brown like your Figma */
    text-decoration: none;
  }

  .nav {
    background: var(--gold);
    display: flex;
    justify-content: center;
    gap: 10rem;
    padding: 0.9rem 1rem;
  }

  .nav :global(a) {
    font-family: "Playfair Display", serif;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--text-dark);
    text-decoration: none;
    border-bottom: none;
    padding: 0;
  }

  /* Mobile: wrap nicely */
  @media (max-width: 800px) {
    .nav {
      flex-wrap: wrap;
      gap: 1.25rem 2rem;
    }
  }
</style>
